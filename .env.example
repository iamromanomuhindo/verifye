# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# SMTP Server Pool Configuration
# Format: host:port:sourceIp:region,host2:port2:sourceIp2:region2
SMTP_SERVERS=smtp1.example.com:25:192.168.1.10:us-east,smtp2.example.com:25:192.168.1.11:eu-west

# Provider Rate Limits (requests per day)
GMAIL_RATE_LIMIT=400
YAHOO_RATE_LIMIT=500
OUTLOOK_RATE_LIMIT=450
DEFAULT_RATE_LIMIT=600

# Rotation Settings (in milliseconds)
IP_ROTATION_INTERVAL=3600000  # 1 hour
SERVER_ROTATION_INTERVAL=600000  # 10 minutes
